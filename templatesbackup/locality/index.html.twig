{% extends 'base.html.twig' %}

{% block title %}Locality index{% endblock %}

{% block body %}
    <h1>Locality index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for locality in localities %}
            <tr>
                <td>{{ locality.id }}</td>
                <td>{{ locality.name }}</td>
                <td>{{ locality.description }}</td>
                <td>{{ locality.createAt ? locality.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ locality.updateAt ? locality.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('locality_show', {'id': locality.id}) }}">show</a>
                    <a href="{{ path('locality_edit', {'id': locality.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('locality_new') }}">Create new</a>
{% endblock %}
