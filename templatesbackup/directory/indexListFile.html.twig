{% extends 'base.html.twig' %}

{% block title %}Directory index
{% endblock %}

{% block body %}
	<h1>Directory index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>UpdateAt</th>
				<th>Description</th>
				<th>Size</th>
				<th>Type</th>
				<th>Extension</th>
				<th>permissions</th>
				<th>Path</th>
				<th>IsFIle</th>
				<th>FileType</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for directory in directories %}
				<tr>
					<td><img src="{{ asset("images/folder.jpg") }}" width="100%" height=="100%"></td>
					<td>
						<a href="{{ path('index_list_folder',{'id': directory.id}) }}">{{ directory.name }}</a>
					</td>
					<td>{{ directory.updateAt ? directory.updateAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ directory.description }}</td>
					<td>{{ directory.size }}</td>
					<td>{{ directory.type }}</td>
					<td>{{ directory.extension }}</td>
					<td>
						{%  for division in directory.companyDivision %}

							-{{ division }}

						{% endfor %}
					</td>
					<td>{{ directory.path }}</td>
					<td>{{ directory.isFIle ? 'Yes' : 'No' }}</td>
					<td>{{ directory.fileType }}</td>
					<td>
						<a href="{{ path('directory_show', {'id': directory.id}) }}">show</a>
						<a href="{{ path('directory_edit', {'id': directory.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="12">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="w3-container">
		<a class="w3-third w3-btn w3-teal fa fa-pencil w3-padding-large" href="{{ path('directory_child_new',{'id': parent.id}) }}">
			Create new</a>
		<a class="w3-third w3-btn" href="{{ path('directory_child_new',{'id': parent.id}) }}"></a>
		<a class="w3-third w3-btn fa fa-upload w3-dark-grey w3-padding-large" href="{{ path('file_upload',{'id': parent.id}) }}">
			upload File</a>

	</div>
{% endblock %}
