{% extends 'base.html.twig' %}

{% block title %}CompanyDivision index{% endblock %}

{% block body %}
    <h1>{% trans %}CompanyDivision index{% endtrans %}<h1>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}name{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>

            </tr>
        </thead>
        <tbody>
        {% for company_division in company_divisions %}
            <tr>
                <td>{{ company_division.id }}</td>
                <td>{{ company_division.name }}</td>


                <td>
                    <a href="{{ path('company_division_show', {'id': company_division.id}) }}">{% trans %}show{% endtrans %}</a>
                    <a href="{{ path('company_division_edit', {'id': company_division.id}) }}">{% trans %}edit{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_division_new') }}">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
